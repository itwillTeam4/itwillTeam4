<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.spring.team4.mapper.UserMapper">


	<select id="selectAllUser" resultType="User">

		SELECT * FROM ${TABLE_USER_TABLE}
		ORDER BY ${COL_USER_CODE} DESC

	</select>


	<select id="selectByUser" resultType="User">

		SELECT * FROM ${TABLE_USER_TABLE}
		WHERE ${COL_USER_USER_ID} = #{USER_USER_ID}
	</select>


	<insert id="create">
	
		INSERT INTO ${TABLE_USER_TABLE}
		(${COL_USER_ID},${COL_USER_PWD},${COL_USER_NN},${COL_USER_NAME},${COL_USER_PHONE},${COL_USER_MEET_IDX},
		${COL_USER_ADMIN_CHECK},${COL_USER_TAG})

		VALUES
		(#{user_id},#{user_pwd},#{user_nn},#{user_name},#{USER_phone},#{USER_MEET_IDX},
		#{USER_ADMIN_CHECK},#{USER_TAG})
	</insert>



	<update id="update">
		UPDATE ${TABLE_USER_TABLE}
		SET ${COL_USER_CODE} = #{user_code}, ${COL_USER_ID} = #{user_id},
		${COL_USER_REG_DATE} = sysdate
		WHERE ${COL_USER_CODE} = #{user_code}
	</update>


	<delete id="delete">
		DELETE FROM ${TABLE_USER_TABLE}
		WHERE ${COL_USER_CODE} = #{user_code}
	</delete>



</mapper>